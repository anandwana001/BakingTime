<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    style="@style/MatchWrapWidHei"
    android:layout_margin="@dimen/card_margin"
    card_view:cardCornerRadius="@dimen/card_album_radius">

    <RelativeLayout
        style="@style/MatchWidHei">

        <TextView
            android:id="@+id/ingredient_name"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/primary_text"
            tool:text="ingredient_name"/>

        <TextView
            android:id="@+id/ingredient_quantity"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_below="@+id/ingredient_name"
            android:textColor="@color/secondary_text"
            tool:text="tbsp"/>

        <TextView
            android:id="@+id/ingredient_measure"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_below="@+id/ingredient_name"
            android:layout_toEndOf="@+id/ingredient_quantity"
            android:textColor="@color/secondary_text"
            tool:text="Gm"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>